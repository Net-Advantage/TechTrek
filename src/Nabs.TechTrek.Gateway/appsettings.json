{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "BearerTokenSettings": {
    "Secret": "<<Add to secrets.json | make sure it meets the requirements for HmacSha256 I.e.: byte[64] >>",
    "Issuer": "http://techTrekGateway",
    "Audience": "http://techTrekGateway"
  },
  "AzureAd": {
    "Instance": "https://netadvantageb2ctest.b2clogin.com/",
    "TenantId": "<<Add to secrets.json>>",
    "ClientId": "<<Add to secrets.json>>",
    "Domain": "netadvantageb2ctest.onmicrosoft.com",
    "SignUpSignInPolicyId": "B2C_1_SignUpAndSignIn",
    "CallbackPath": "/signin-oidc"
  },
  "JwtBearerAuthentication": {
    "MetadataAddress": "https://netadvantageb2ctest.b2clogin.com/netadvantageb2ctest.onmicrosoft.com/B2C_1_SignUpAndSignIn/v2.0/.well-known/openid-configuration",
    "RequireHttpsMetadata": false,
    "SaveToken": true,
    "ValidateIssuer": true,
    "ValidIssuer": "<<Add to secrets.json>>",
    "ValidateAudience": true,
    "ValidAudience": "<<Add to secrets.json>>"
  },
  "ReverseProxy": {
    "Routes": {
      "apiRoute": {
        "ClusterId": "apiCluster",
        "Match": {
          "Path": "/api/{**catch-all}"
        },
        "Transforms": [
          {
            "PathRemovePrefix": "/api"
          }
        ],
        "AuthorizationPolicy": "JwtBearerPolicy"
      },
      "uiAnonRoute": {
        "ClusterId": "uiCluster",
        "Match": {
          "Path": "/"
        }
      },
      "uiRoute": {
        "ClusterId": "uiCluster",
        "Match": {
          "Path": "/{**catch-all}"
        },
        "AuthorizationPolicy": "Default"
      }
    },
    "Clusters": {
      "apiCluster": {
        "Destinations": {
          "defaultApi": {
            "Address": "http://webapi"
          }
        }
      },
      "uiCluster": {
        "Destinations": {
          "defaultUi": {
            "Address": "http://webapp"
          }
        }
      }
    }
  }
}
