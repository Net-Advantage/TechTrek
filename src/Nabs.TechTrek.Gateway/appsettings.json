{
	"Logging": {
		"LogLevel": {
			"Default": "Information",
			"Microsoft.AspNetCore": "Warning"
		}
	},
	"AllowedHosts": "*",
	"AzureAd": {
		"Instance": "https://netadvantageb2ctest.b2clogin.com/",
		"TenantId": "<<Add to secrets.json>>",
		"ClientId": "<<Add to secrets.json>>",
		"Domain": "netadvantageb2ctest.onmicrosoft.com",
		"SignUpSignInPolicyId": "B2C_1_SignUpAndSignIn",
		"CallbackPath": "/signin-oidc"
	},
	"ReverseProxy": {
		"Routes": {
			"apiRoute": {
				"ClusterId": "apiCluster",
				"Match": {
					"Path": "/api/{**catch-all}"
				},
				"Transforms": [
					{
						"PathRemovePrefix": "/api"
					}
				]
			},
			"uiRoute": {
				"ClusterId": "uiCluster",
				"Match": {
					"Path": "/ui/{**catch-all}"
				},
				"Transforms": [
					{
						"PathRemovePrefix": "/ui"
					}
				],
				"AuthorizationPolicy": "Default"
			},

			"defaultRoute": {
				"ClusterId": "defaultCluster",
				"Match": {
					"Path": "/{**catch-all}"
				},
				"AllowAnonymous": true
			}
		},
		"Clusters": {
			"apiCluster": {
				"Destinations": {
					"defaultApi": {
						"Address": "http://techTrekWebApi"
					}
				}
			},
			"uiCluster": {
				"Destinations": {
					"defaultUi": {
						"Address": "http://techTrekWebApp"
					}
				}
			},
			"defaultCluster":  {
				"Destinations": {
					"default": {
						"Address": "http://techTrekGateway"
					}
				}
			}
		}
	}
}
